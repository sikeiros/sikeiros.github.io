{% set latest = collections.postsByMonth | first %}

{% if latest %}
  <!-- Redirect to newest month: /archive/posts/YYYY-MM/ -->
  <meta http-equiv="refresh" content="0; url={{ ('/posts/' + latest.ym + '/') | url }}">
  <main class="content">
    <p>Redirecting to {{ latest.ym | monthLabel }}â€¦</p>
    <p><a href="{{ ('/posts/' + latest.ym + '/') | url }}">Click here if not redirected.</a></p>
  </main>
{% else %}
  <main class="content"><p>No posts yet.</p></main>
{% endif %}
