---
layout: base.njk

pagination:
  data: collections.postsByMonth
  size: 1
  alias: group

permalink: "posts/{{ group.ym }}/"

eleventyComputed:
  title: "Archive {{ group.ym | monthLabel }}"
  htmlClass: "is-archive"
---

<main class="content">
  <h1>Archive</h1>

  <!-- Months ribbon INSIDE .content (so CSS applies) -->
  <nav class="months" aria-label="Months">
    {% for g in collections.postsByMonth %}
      <a class="month"
         href="{{ ('/posts/' + g.ym + '/') | url }}"
         {% if g.ym == group.ym %}aria-current="true"{% endif %}>
        {{ g.ym | monthLabel }}
      </a>
    {% endfor %}
  </nav>

  <!-- Entries (also inside .content so link styles apply) -->
  {% for post in group.items %}
    <article class="entry">
      <time class="chip">{{ post.date | dateChip }}</time>
      <h2 class="entry-title">
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
      </h2>
      <div class="entry-body">
        {{ post.templateContent | safe }}
      </div>
    </article>
  {% endfor %}
</main>
